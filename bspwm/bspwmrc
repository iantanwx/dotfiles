#! /usr/bin/env zsh

bspc monitor DVI-I-1 -d I II III IV V
bspc monitor HDMI-0 -d VI VII VIII IX X

bspc config border_width            2
bspc config focused_border_color    "#EC6798"
bspc config window_gap              12
bspc config pointer_follows_monitor true
bspc config focus_follows_pointer   true

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Termite desktop='I'
bspc rule -a jetbrains-idea desktop='II'
bspc rule -a TablePlus desktop='III'
bspc rule -a Postman desktop='IV'
bspc rule -a Nemo desktop='V'
bspc rule -a Google-chrome desktop='VI'
bspc rule -a Franz desktop='VIII'
bspc rule -a zoom desktop='IX'
bspc rule -a Spotify desktop='X'

sxhkd &
dunst &
~/.config/polybar/launch.sh &
redshift -c ~/.config/redshift/redshift.conf &
feh --bg-fill ~/Pictures/wallpaper_tokyo_night.jpg
picom &
xsetroot -cursor_name left_ptr
